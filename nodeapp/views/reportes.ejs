<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.4/css/bulma.min.css">
   <link rel="stylesheet" href="/themify-icons/themify-icons.css">
	<link rel='stylesheet' href='/stylesheets/style.css' />
	<script src="./javascripts/moment-with-locales.js"></script>
   <title><%= title %></title>
</head>
<body>
   <%- include('menu.ejs') %>
   <div class="m-3">
      <h2 class="title is-2">Reportes</h2>
      <div class="columns">
         <div class="column is-2">
               <label class="label" for="fi">F. Inicial</label>
               <input class="input" type="date" id="fi" name="fi">
         </div>
         
         <div class="column is-2">
               <label class="label" for="ff">F. Final</label>
               <input class="input" type="date" id="ff" name="ff">
         </div>
         
         <div class="column is-2">
               <div class="field">
                  <label class="label" for="estado">Estado</label>
                  <div class="select">
                     <select class="select" name="estado" id="estado">
                           <option value="completo">Completo</option>
                           <option value="attending">ATENDIENDO</option>
                           <option value="close">CERRRADO</option>
                           <option value="complete">COMPLETO</option>
                           <option value="new">NUEVO</option>
                           <option value="pending">PENDIENTE</option>
                     </select>
                  </div>
               </div>
         </div>
         <div class="column is-2">
               <label class="label" for=""></label>
               <button class="button is-info" id="verReporte" onclick="getExcel(); return false;">VER</button>
         </div>
      </div>
      <!-- CONTENEDORES -->
      <div class="column is-10" id="tablaReportes" style="overflow-x: hide; max-height:80vh; overflow-y: auto; display:block;"></div>
   </div>
   <script type="text/javascript" src="./javascripts/JQuery360.js"></script>
   <script type="text/javascript" src="./javascripts/inicio.js"></script>
</body>
</html>
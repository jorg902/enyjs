<div class="panel has-background-white" style="padding: 2%;">
    <div class="field">
        <label class="label">*Asunto</label>
        <div  class="control">
            <input class="input" type="text" name="subject" value="" id="asunto" placeholder="Asunto del correo a enviar">
        </div>
    </div>

    <div class="columns is-variable">
        <div class="column is-6">
            <label class="label">*Correo a usar</label>
            <div class="field">
                <div class="select" style="width:100%;">
                    <select name="email" id="email_"  style="width:100%;">
                        <option value="">Seleccione correo</option>
                        <% emailsmtp.forEach( item=>{ %>
                            <option value="<%= item.email %>"><%= item.email %></option>
                        <% }) %>
                    </select>
                </div>
            </div>

        </div>
        <div class="column is-2">
            <label class="label">Usuario</label>
            <div>
                <input class="input" type="text" value="<%= datosOut.usuario %>" name="usuario" id="usuario_" placeholder="EX" >
            </div>
        </div>
        <div class="column is-2">          
            <div class="field" >
                <label  for="fileUpload" class="label" >Adjuntos</label>
                <div class="file is-warning"  >
                    <label class="file-label">
                        <input class="file-input" type="file" onchange="previewFileNewMail()" style="width: 100%;" />
                        <span class="file-cta" style="width: 100%;">
                            <span class="file-icon">
                                <i class="ti-upload"></i>
                            </span>
                            <span class="file-label has-text-weight-bold">
                                elige archivo
                            </span>
                        </span>
                    </label>
                </div>
            </div>
        </div>
        <div class="column is-2">
            <label class="label">Accion</label>
            <div class="field">
                <button id="btnNewMail" class="button is-primary has-text-weight-bold" onclick="getNewMail(); return false;" style="width: 100%;">
                    <i class="ti-arrow-right"></i>&nbsp;Enviar
                </button>
            </div>
        </div>
    </div>
    <div class="columns">
        <div class="column is-12">
            <div id="adjuntosMailSend"></div>
        </div>
    </div>
    <div class="columns">
        <div class="column is-12">
            <label class="label">*Para</label>
            <div class="field">
                <input class="input" type="text" value="<%= datosOut.to %>" name="to" id="to_"  placeholder="email@...">
            </div>
        </div>
    </div>
    <div class="columns">
        <div class="column is-12">
            <label class="label" title="separe los correos usando coma (,)" >cc</label>
            <div class="field">
                <input class="input" type="text" value="<%= datosOut.cc %>" name="cc" id="cc_" placeholder="separe los correos usando coma (,)" >
            </div>          
        </div>
    </div>
    <div class="columns">
        <div class="column is-12" >
            <label class="label">*Texto</label>
            <textarea class="input" name="msg" id="msg_" cols="20" rows="50" placeholder="respuesta..." style="width: 100%; height: 87px; resize: none; border:none; border:1px #ccc solid;" ></textarea>
        </div>
    </div>
</div>
    
